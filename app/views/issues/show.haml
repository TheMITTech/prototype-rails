.titleline
  %h1= @issue.name
  = link_to issues_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list
    Back
- @articles_by_sections.each do |sec, articles|
  %h2= sec
  = render 'articles/article_list', articles: articles.sort_by(&:rank), hide_search: true, rank_select: true, from_issues_page: @issue.id
- if @images.any?
  %h2 Images
  = render 'images/image_list', images: @images, hide_search: true
